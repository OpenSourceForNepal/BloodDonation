html, body{
  margin:0px;
  padding:0px;
  font-family: "Avant Garde",Avantgarde,"Century Gothic",CenturyGothic,AppleGothic,sans-serif;
  height: 100%;
}

*, *:after, *:before {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.middle {
  vertical-align: middle;
}

header{
  z-index: 1;
  position:fixed;
  width:100%;
  height:60px;
  background:rgba(0,0,0,0.9);
}

header a{
  color:white;
  display:inline-block;
  padding:0px 10px;
  height:60px;
  line-height:60px;
  text-align:center;
  text-decoration:none;
  text-transform:uppercase;
  letter-spacing:2px;
  font-weight:500;
}

#logo {
  font-size: 30px;
}

#donate{
  background:url('<%= asset_path("victim.png") %>');
  background-size:cover;
  background-position:center center;
  background-attachment:fixed;
}
#patient{
  background: url('<%= asset_path("helping_hand.png") %> ');
  background-size:cover;
  background-position:center center;
  background-attachment:fixed;
}
.hero, .content{
  text-align:center;
  position:relative;
  width: 100%;
}

.inner{
  min-height:600px;
  position: relative;
}

.hero .inner{
  background:rgba(0,0,0,0.5);
  /*background: rgba(0,0,0,0.5) url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAACCAYAAACddGYaAAAAD0lEQVQIW2NkQABjRmQOAAM+AGkQsDBSAAAAAElFTkSuQmCC) repeat;*/
}


.copy{
  position:absolute;
  top:50%;
  height:10em;
  margin-top:-5em;
  width:100%;
}

.hero h1, .hero p{
  color:#fff;
}

.content h1, .content p{
  color:#333;
}

h1{
  margin:0px;
  font-weight:400;
  font-size:32px;
  padding:0px 20px;
}

p{
  font-size:16px;
  padding:0px 20px;
}

.red-btn {
  text-decoration: none;
  padding: 15px 50px;
  background-color:#8A0707;
  color: white;
  text-transform: uppercase;
}

.white-btn {
  text-decoration: none;
  padding: 15px 50px;
  background-color:#ecf0f1;
  color: black;
  text-transform: uppercase;
}

.text-white {
  color: white !important;
}

.share-buttons {
  width: 60%; margin: 0 auto;
}
