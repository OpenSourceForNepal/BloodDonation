<!-- Header -->
<div class="row">
  <div class="blood-header">
    <div class="container">
      <center>
        <h1 class="text-white"><%= @donor.full_name %></h1>
        <address class="text-white">
          <%= @donor.address %><br>
          <abbr title="Cell Phone"><i class="fa fa-mobile fa-2x"></i></abbr> <%= @donor.cell_phone %>&nbsp;&nbsp;
          <abbr title="Blood Type"><i class="fa fa-tint fa-2x"></i></abbr> <%= @donor.blood_type.titleize %>
        </address>
        <span class="text-white">
          <span class="quote">&ldquo;</span>
            <strong>Each pint</strong> of your blood can save as many as <strong>three lives</strong>
          <span class="quote">&rdquo;</span>
        </span>
      </center>
    </div>
  </div>
</div>

<%= render 'partials/flash' %>
