<!-- Header -->
<div class="row">
  <div class="blood-header">
    <div class="container">
      <center>
        <h1 class="text-white">Hospital</h1>
        <p class="text-white">Looking for Blood Donors? Please complete the form below, we will notify when potential donors will be available.</p>
      </center>
    </div>
  </div>
</div>

<%= render 'partials/flash' %>
<!-- Form -->
<div class="col-sm-5" style="height: 100%;">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= simple_form_for(@hospital, url: hospital_index_path, html: { class: 'form-horizontal' }) do |f| %>
          <center><legend>All fields are important.</legend></center>
          <div class="col-md-10 col-md-offset-1">
            <%= f.input :name, label: 'Name', hint: 'Required' %>
            <%= f.input :street, label: 'Street' %>
            <%= f.input :city, label: 'City', hint: 'Required' %>
            <input type="hidden" id="latitude" name="hospital[lat]" value="">
            <input type="hidden" id="longitude" name="hospital[long]" value="">

            <%= f.input :state, label: 'Aanchal', hint: 'Required' %>
            <%= f.input :contact_person_name, label: 'Contact Person\'s Name' %>
            <%= f.input :contact_person_email, label: 'Contact Person\'s Email' %>
            <%= f.input :contact_person_phone, label: 'Contact Person\'s Phone', hint: 'Required', placeholder: '+977 9811111111' %>

            <div class="col-lg-12">
              <%= f.submit 'Submit', class: 'btn btn-default btn-lg btn-block' %>
            </div>
          </div>
      <% end %>

    </div>
  </div>
</div>

<!-- Map -->
<div class="row col-md-7" id="map-canvas"></div>